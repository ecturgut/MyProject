@model MyProject.Models.Kisi

@{
    ViewBag.Title = "Listeden Kullanıcı Sil";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<html>

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Kullanıcı Oluşturma Sayfası</title>
    <link href="~/Content/css/font.css" rel="stylesheet" />
    <link href="~/Content/css/style.css" rel="stylesheet" />
</head>


<body>
    <h1>Listeden Kullanıcı silme Sayfası</h1>

    <h3>Bu kullanıcıyı silmek istediğinizden emin misiniz?</h3>

    <div>
        <h4>Kişi Bilgileri</h4>
        <hr />
        <dl class="dl-horizontal">
            <dt>
               Ad Soyad
            </dt>

            <dd>
                @Html.DisplayFor(model => model.AdSoyad)
            </dd>

            <dt>
                Email
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Email)
            </dd>

            <dt>
                Yas
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Yas)
            </dd>

            <dt>
                Telefon
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Telefon)
            </dd>

            <dt>
                Parola
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Parola)
            </dd>

            <dt>
                Konum
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Konum)
            </dd>

        </dl>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-actions no-color">
                <input type="submit" value="Seçili Kaydı Sil" class="btn btn-default" /> |
                @Html.ActionLink("Kullancı Listesine Geri Dön", "Listeleme")
            </div>
        }
    </div>

</body>

</html>

